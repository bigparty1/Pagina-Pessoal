{
  "name": "pagina-pessoal",
  "version": "1.0.0",
  "description": "Uma página pessoal no estilo currículo, desenvolvida com HTML5, CSS3 e TypeScript.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy:static",
    "copy:static": "cpx \"src/*.html\" dist/ && cpx \"src/*.css\" dist/ && cpx \"resources/*\" dist/resources/",
    "watch:static": "cpx \"src/*.{html,css}\" dist/ --watch",
    "dev": "concurrently \"npx tsc --watch\" \"npm run watch:static\" \"live-server dist\"",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigparty1/Pagina-Pessoal.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bigparty1/Pagina-Pessoal/issues"
  },
  "homepage": "https://github.com/bigparty1/Pagina-Pessoal#readme",
  "devDependencies": {
    "@types/node": "^24.0.10",
    "concurrently": "^9.2.0",
    "cpx": "^1.5.0",
    "live-server": "^1.2.2",
    "typescript": "^5.8.3"
  }
}
